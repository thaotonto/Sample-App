<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <label>Gender</label>

        <div class="radio">
          <label> <%= f.radio_button :gender, "male", :checked => true %> Male</label><br>
          <label> <%= f.radio_button :gender, "female" %> Female</label>
        </div>
        <label>Birth</label>
        <%= f.text_field :dob, hide_label: true, class: 'datepicker form-control', :readonly => true, :value => Time.now.strftime("%m/%d/%Y")%>
        <script>
           $(function() {
               $( ".datepicker" ).datepicker({ changeYear: true , yearRange: "-80:+0"});
               $( ".datepicker" ).datepicker( "option", "dateFormat",'mm-dd-yy');
           });
       </script>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control'%>

        <%= f.label :password_confirmation, "Password Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control'%>

        <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
